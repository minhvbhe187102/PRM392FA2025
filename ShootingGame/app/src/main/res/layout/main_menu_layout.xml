<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000">

    <!-- Game Title -->
    <TextView
        android:id="@+id/gameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SHOOTING GAME"
        android:textSize="36sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="60dp" />

    <!-- User Info (Left Side) -->
    <TextView
        android:id="@+id/userInfoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loading..."
        android:textSize="14sp"
        android:textColor="#CCCCCC"
        android:gravity="start"
        app:layout_constraintTop_toBottomOf="@id/gameTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp" />

    <!-- Start Button -->
    <Button
        android:id="@+id/startButton"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="START"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@drawable/start_button_background"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/userInfoText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp" />

    <!-- Quit Button -->
    <Button
        android:id="@+id/quitButton"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="QUIT"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@drawable/quit_button_background"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/startButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />

    <!-- Inventory Button (Top Right) -->
    <Button
        android:id="@+id/inventoryButton"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="INVENTORY"
        android:textSize="12sp"
        android:textStyle="bold"
        android:background="@drawable/inventory_button_background"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/gameTitle"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp" />

    <!-- Pull Button (Below Inventory) -->
    <Button
        android:id="@+id/pullButton"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="PULL SKINS"
        android:textSize="12sp"
        android:textStyle="bold"
        android:background="@drawable/pull_button_background"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/inventoryButton"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp" />

    <!-- Shop Button (Below Pull) -->
    <Button
        android:id="@+id/shopButton"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="SHOP"
        android:textSize="12sp"
        android:textStyle="bold"
        android:background="@drawable/shop_button_background"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/pullButton"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp" />

    <!-- Settings Button (Bottom Left) -->
    <ImageButton
        android:id="@+id/settingsButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:background="@drawable/settings_button_background"
        android:src="@drawable/settings_icon"
        android:scaleType="centerInside"
        android:contentDescription="Settings"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
