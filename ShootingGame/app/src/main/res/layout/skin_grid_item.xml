<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:background="@drawable/skin_grid_item_background">

    <!-- Skin Image (centered, circular) -->
    <ImageView
        android:id="@+id/skinImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:background="@drawable/skin_circle_background" />

    <!-- Equipped Indicator -->
    <TextView
        android:id="@+id/equippedIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="âœ“"
        android:textSize="16sp"
        android:textColor="#00FF00"
        android:textStyle="bold"
        android:background="@drawable/equipped_indicator_background"
        android:padding="4dp"
        android:layout_gravity="top|end"
        android:layout_margin="4dp"
        android:visibility="gone" />

    <!-- Locked Indicator -->
    <TextView
        android:id="@+id/lockedIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ”’"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:visibility="gone" />

    <!-- Status Text (for shop) -->
    <TextView
        android:id="@+id/statusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="10sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:background="#80000000"
        android:padding="2dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_margin="2dp"
        android:visibility="gone" />

    <!-- Rarity Indicator -->
    <TextView
        android:id="@+id/rarityIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="8sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:background="#80000000"
        android:padding="1dp"
        android:layout_gravity="top|start"
        android:layout_margin="2dp"
        android:visibility="gone" />

</FrameLayout>
