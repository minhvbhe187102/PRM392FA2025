<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#80000000"
    android:padding="16dp">

    <!-- Header -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TRADING ROOM"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="24dp" />

    <!-- Main Content - 50/50 Split -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <!-- Create Room Section (50%) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="#40000000"
            android:padding="16dp"
            android:layout_marginEnd="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CREATE ROOM"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create a new trading room and share the code with another player"
                android:textSize="14sp"
                android:textColor="#CCCCCC"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_marginBottom="24dp" />

            <Button
                android:id="@+id/createRoomButton"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="CREATE ROOM"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="@drawable/buy_button_background"
                android:textColor="#FFFFFF"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>

        <!-- Join Room Section (50%) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="#40000000"
            android:padding="16dp"
            android:layout_marginStart="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="JOIN ROOM"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter a room code to join an existing trading room"
                android:textSize="14sp"
                android:textColor="#CCCCCC"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_marginBottom="24dp" />

            <EditText
                android:id="@+id/roomCodeEditText"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Enter 6-digit room code"
                android:textSize="18sp"
                android:inputType="number"
                android:maxLength="6"
                android:background="@drawable/input_field_background"
                android:textColor="#FFFFFF"
                android:textColorHint="#CCCCCC"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:gravity="center" />

            <Button
                android:id="@+id/joinRoomButton"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="JOIN ROOM"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="@drawable/sell_button_background"
                android:textColor="#FFFFFF"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>

    </LinearLayout>

    <!-- Back Button -->
    <Button
        android:id="@+id/backButton"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="â† BACK"
        android:textSize="14sp"
        android:textStyle="bold"
        android:background="@drawable/back_button_background"
        android:textColor="#FFFFFF"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp" />

</LinearLayout>
